// Initialize Vision API client with better error handling
let client;
try {
  client = new vision.ImageAnnotatorClient({ 
    keyFilename: './credentials/lankmarkscanner-9bad15c6146a.json' 
  });
  console.log('âœ… Google Vision API client initialized successfully');
} catch (error) {
  console.error('âŒ Failed to initialize Google Vision API client:', error.message);
