// Utility function to validate base64
function isValidBase64(str) {
  try {
    return btoa(atob(str)) === str;
  } catch (err) {
    // Try Node.js way
    try {
      return Buffer.from(str, 'base64').toString('base64') === str;
    } catch (e) {
      return false;
    }
  }
}

